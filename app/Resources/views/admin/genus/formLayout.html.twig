{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/js/bootstrap-datepicker.min.js"></script>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/js/bootstrap-datepicker.min.js"></script>
    <script>
        jQuery(document).ready(function(){
            $('.js-datepicker').datepicker({
                format: 'yyyy-mm-dd'
            });
        })
    </script>
{% endblock %}
